#pragma GCC optimize("Ofast")
#include<bits/stdc++.h>
using namespace std;
int main(){
cin.tie(0);
cout.tie(0);
ios_base::sync_with_stdio(false);
string s;
cin>>s;
long long int ans=1,c=0;
char ch='A';
for(int i=0;i<s.length();i++){
        char ch1 = s[i];
        if(ch==ch1){
            c++;
            ans=max(c,ans);
        }else{
        ch=ch1;
        c=1;
        }


}
cout<<ans;


}
