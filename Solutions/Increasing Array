#pragma GCC optimize("Ofast")
#include<bits/stdc++.h>
using namespace std;
int main(){
cin.tie(0);
cout.tie(0);
ios_base::sync_with_stdio(false);
long long int mx,n,x,ans;
cin>>n;

mx=0;
x=0;
ans=0;
for(int i=0;i<n;i++){
    cin>>x;
    mx = max(x,mx);
    ans+=mx-x;




    }
    cout<<ans;


return 0;

